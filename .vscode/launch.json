{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS (TS)",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "program": "${workspaceFolder}/backend/src/main.ts",
            "envFile": "${workspaceFolder}/backend/.env",
            "cwd": "${workspaceFolder}/backend",
            "outFiles": [
                "${workspaceFolder}/backend/dist/**/*.js"
            ]
        }
    ]
}